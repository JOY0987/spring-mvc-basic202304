<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.spring.mvc.training.repository.BoardExMapper">
    <select id="findAll" resultType="boardEx">
        SELECT
            board_no, title, content, view_count, reg_date_time
        FROM ex_board
        ORDER BY board_no DESC
        LIMIT #{pageStart}, #{amount}
    </select>

    <select id="findOne" resultType="boardEx">
        SELECT
            board_no, title, content, view_count, reg_date_time
        FROM ex_board
        WHERE board_no = #{boardNo}
    </select>

<!--    <insert id="save">-->
<!--        INSERT INTO ex_board-->
<!--            (title, content)-->
<!--        VALUES ()-->
<!--    </insert>-->
    <select id="count" resultType="int">
        SELECT COUNT(*)
        FROM ex_board
    </select>
</mapper>